# Configurações principais
project_name = "meu-etl-pipeline"
environment  = "dev"
aws_region   = "us-east-1"

# Configurações dos buckets (serão criados com sufixo aleatório)
raw_data_bucket       = "dados-brutos"
processed_data_bucket = "dados-processados"
lambda_code_bucket   = "codigo-lambdas"

# Configurações das Lambdas
lambda_runtime     = "python3.11"
lambda_timeout     = 300
lambda_memory_size = 1024

# Caminhos das layers (ajuste conforme sua estrutura de arquivos)
python_layer_zip_path      = "layers/python_dependencies.zip"
